<img alt="Unsplash image random" loading="lazy" id="unsplashImg"  class="unsplash">
<script>

    let getImg = 'https://api.unsplash.com/photos/random?client_id=g1OiNzLO12axZyrJPqglbScQy2vbpD6BtcqsDIpCcIo&orientation=portrait&query=shoes';
    let imageElement = document.querySelector("#unsplashImg"); 
    fetch(getImg)
      .then((response) => response.json())
      .then((jsonData) => {
        imageElement.src = jsonData.urls.full;    
      })
	  document.getElementById("unsplashImg").onload = fadeIn;        
      function fadeIn() { 
          var fade = document.getElementById("unsplashImg"); 
          var opacity = 0; 
          var intervalID = setInterval(function() { 
        
              if (opacity < 1) { 
                  opacity = opacity + 0.01 
                  fade.style.opacity = opacity; 
              } else { 
                  clearInterval(intervalID); 
              } 
          }, 15); 
      } 

  </script>